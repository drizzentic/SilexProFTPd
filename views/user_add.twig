{# index.twig #}
{% extends 'layout.twig' %}
{% block title %}New user{% endblock %}
{% block content %}

  <div class="row">
    <div class="span12">
      <h2>New user</h2>
      <br/>

      <form action="" method="post">
        {{ form_errors(form) }}

        <div class="clearfix">
          {{ form_label(form.fullname) }}
          <div class="input">
            {{ form_widget(form.fullname, { "attr": { "class": "large" } }) }}
          </div>
        </div>

        <div class="clearfix">
          {{ form_label(form.username) }}
          <div class="input">
            {{ form_widget(form.username, { "attr": { "class": "large" } }) }}
          </div>
        </div>

        <div class="clearfix">
          {{ form_label(form.passwd) }}
          <div class="input">
            {{ form_widget(form.passwd, { "attr": { "class": "large" } }) }}
          </div>
        </div>

        <div class="clearfix">
          {{ form_label(form.homedir) }}
          <div class="input">
            {{ form_widget(form.homedir, { "attr": { "class": "large" } }) }}
          </div>
        </div>

        <div class="clearfix">
          {{ form_label(form.email) }}
          <div class="input">
            {{ form_widget(form.email, { "attr": { "class": "large" } }) }}
          </div>
        </div>

        {{ form_rest(form) }}

        <div class="actions">
          <input type="submit" value="Add" class="btn primary">
        </div>
      </form>

    </div>
  </div>

  <script type="text/javascript" src="/assets/jquery.min.js"></script>
  <script type="text/javascript" src="/assets/bootstrap-alerts.js"></script>

{% endblock %}
